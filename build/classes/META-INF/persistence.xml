<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="1.0">
	<persistence-unit name="hibernatePersistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		<class>com.furniture.entity.UserBean</class>
		<class>com.furniture.entity.ProductBean</class>
		<class>com.furniture.entity.AddCartListBean</class>
		<class>com.furniture.entity.OrderBean</class>
	
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />

		</properties>
	</persistence-unit>
</persistence>